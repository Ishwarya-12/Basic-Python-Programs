print("*** WELCOME TO PARADISE HOTEL ***")
print("*We are happy to have you here*")
a=str(input("Are you a regular customer here and have the loyalty card(YES/NO)"))
if a=='YES':
    user="PARADISE_CST"
    pwd=1212
    print("Enter your username ID and Password")
    username=str(input("Enter username:"))
    password=int(input("Enter password:"))
    if(username==user and password==pwd):
        print("You can avail 20% off on all Lunch meals + you get a free hugebasket voucher INR 100")
    else:
        print("Login Fail.Check your username ID/password")
elif a=='NO':
    choice=input("We have a loyalty card that offers discounts on food purchases.would you like to sign up?(YES/NO)")
    if choice == 'YES':
        name = input("YOUR NAME: ").strip()
        while True:
            mobile = input("YOUR MOBILE NUMBER: ").strip()
            if mobile.isdigit() and len(mobile) == 10:
                break
            else:
                print("Please enter a valid 10-digit mobile number.")
        print("Thank you, {}! We will provide the loyalty card within 3 days. THANK YOU!!".format(name))
    elif choice == 'NO':
        print("No worries! Enjoy your food.")
else:
    print("Invalid choice. Please select YES or NO.")
print("""Choose your menu
           1.Breakfast
           2.Lunch Meals
           3.Snack options
           4.Beverages
           5.EXIT""")
your_choice=int(input("Enter your choice(1-5):"))

if your_choice==1:
    print("You have choosen Breakfast")
    print("Each item is only 50 rupees, please pay at the counter:)")
elif your_choice==2:
     print("You have choosen Lunch Meals")
     print("Each meal is only 150 rupees, please pay at the counter:)")
elif your_choice==3:
     print("You have choosen Snacks")
     print("Each snack is only 40 rupees, please pay at the counter:)")
elif your_choice==4:
     print("You have choosen Beverages")
     print("Each Beverage is only 60 rupees, please pay at the counter:)")
else:
     print("Exiting")
if 1 <= your_choice <= 4:
    qty=int(input("Quantity="))
    if your_choice==1:
      total=qty*50
      print("Total=",total)
    elif your_choice==2:
      if(user==username and pwd==password):
          total=qty*150
          offer=0.20*total
          dis=total-offer
          print("Thank you for using the loyalty card , you get 20% off on our lunch meals")
          print("Total=",dis)
      else:
          total=qty*150
          print("Total=",total)
    elif your_choice==3:
      total=qty*40
      print("Total=",total)
    elif your_choice==4:
      total=qty*60
      print("Total=",total)
elif your_choice == 5:
    pass 
else:
    print("Invalid choice for quantity calculation.")

print("Thank you for visiting us")
